<div class="col-xs-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <% if user.id == current_user.id %>
    <div class="row">
      <%= link_to "", edit_user_path(user), class: "col-xs-12 bth bth-default glyphicon glyphicon-wrench" %>
    </div>
  <% end %>

  <h2>New book</h2>
  <%= form_with model: book_path, local:true do |f| %>
    <div class="field row">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class:'col-xs-12 book_title' %>
    </div>
    <div class="field row">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, class:'col-xs-12 book_body' %>
    </div>
    <div class="actions row">
      <%= f.submit 'Create Book', class:'bth bth-primary col-xs-12' %>
    </div>
  <% end %>
</div>